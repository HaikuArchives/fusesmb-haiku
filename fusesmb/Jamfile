SubDir TOP fusesmb ;

SubDirCcFlags -I/boot/system/develop/headers/userlandfs/fuse -DB_USE_POSITIVE_POSIX_ERRORS ;

Library common :
	configfile.c
	hash.c
	smbctx.c
	stringlist.c
	;

# -------------------------------------------------------------------
# fusesmb
# -------------------------------------------------------------------

LINKLIBS  on fusesmb = -lbe -llocalestub -luserlandfs_fuse -lsmbclient -lposix_error_mapper -lstdc++ ;
LINKFLAGS on fusesmb = -Xlinker -soname=_APP_ ;

Main fusesmb :
	fusesmb.c
	;

LinkLibraries fusesmb :
	common
	haiku-support
	;

# -------------------------------------------------------------------
# fusesmb-scan
# -------------------------------------------------------------------

LINKLIBS  on fusesmb-scan = -lbe -llocalestub -lsmbclient -lposix_error_mapper -lstdc++ ;

Main fusesmb-scan :
	cache.c
	;

LinkLibraries fusesmb-scan :
	common
	haiku-support
	;

SubInclude TOP fusesmb haiku ;
